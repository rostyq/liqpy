{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start server to handle webhooks from LiqPay",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "tests.server"
            ],
        },
        {
            "label": "Put localhost:8000 on internet",
            "type": "shell",
            "command": "ngrok",
            "args": [
                "http",
                "8000"
            ],

        }
    ]
}